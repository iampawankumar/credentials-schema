{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/verifiable-credential-schema.json",
  "title": "VerifiableCredential",
  "type": "object",
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject",
    "proof"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "format": "uri"
          },
          {
            "type": "object",
            "properties": {
              "address": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        ]
      },
      "minItems": 1
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "issuer": {
      "oneOf": [
        { "type": "string", "format": "uri" },
        {
          "type": "object",
          "properties": {
            "id": { "type": "string", "format": "uri" }
          },
          "required": ["id"]
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "familyName": {
          "type": "string"
        },
        "givenName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "telephone": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "enum": ["PostalAddress"]
            },
            "streetAddress": {
              "type": "string"
            },
            "addressLocality": {
              "type": "string"
            },
            "addressRegion": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            },
            "addressCountry": {
              "type": "string"
            }
          },
          "required": ["@type"]
        },
        "description": {
          "type": "string"
        },
        "ipAddress": {
          "type": "string",
          "format": "ipv4"
        },
        "stacks": {
          "type": "string"
        },
        "linkedin": {
          "type": "string",
          "format": "uri"
        },
        "twitter": {
          "type": "string",
          "format": "uri"
        },
        "facebook": {
          "type": "string",
          "format": "uri"
        },
        "instagram": {
          "type": "string",
          "format": "uri"
        },
        "gmail": {
          "type": "string",
          "format": "email"
        },
        "cid": {
          "type": "string"
        },
        "handle": {
          "type": "string"
        },
        "defaultValue": {
          "type": "string"
        },
        "public": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "private": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["handle", "id", "type"]
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "proofPurpose": {
          "type": "string"
        },
        "verificationMethod": {
          "type": "string",
          "format": "uri"
        },
        "proofValue": {
          "type": "string"
        }
      },
      "required": ["type", "created", "proofPurpose", "verificationMethod", "proofValue"]
    }
  }
}
